@model IEnumerable<CapaDatos.Courses>

@{
    ViewBag.Title = "Cursos";
}

<h2>Cursos</h2>

<p>
    @Html.ActionLink("Crear Curso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCourse }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.IdCourse }) |*@
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdCourse })
        </td>
    </tr>
}

</table>
