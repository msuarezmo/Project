@model IEnumerable<CapaDatos.Students>

@{
    ViewBag.Title = "Estudiantes";
}

<h2>Estudiantes</h2>

<p>
    @Html.ActionLink("Crear estudiante", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Curso
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Tipo Documento
        </th>
        <th>
            Documento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Courses.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Document)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdStudent }) |
            @*@Html.ActionLink("Details", "Details", new { id = item.IdStudent }) |*@
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdStudent })
        </td>
    </tr>
}

</table>
