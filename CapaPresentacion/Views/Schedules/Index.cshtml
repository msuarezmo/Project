@model IEnumerable<CapaDatos.Schedule>

@{
    ViewBag.Title = "Horarios";
}

<h2>Horarios</h2>

<p>
    @Html.ActionLink("Crear Horario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Hora desde
        </th>
        <th>
            Hora hasta
        </th>
        <th>
            Docente
        </th>
        <th>
            Curso
        </th>
        <th>
            día
        </th>
        <th>
            Materia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HourFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HourTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Courses.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Days.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subjects.name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
